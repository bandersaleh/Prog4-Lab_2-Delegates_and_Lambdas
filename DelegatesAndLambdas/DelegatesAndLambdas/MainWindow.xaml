<Window x:Class="DelegatesAndLambdas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegatesAndLambdas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox Margin="370,29,40,29">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbDelegate" Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="txtNum1" HorizontalAlignment="Left" Margin="54,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNum2" HorizontalAlignment="Left" Margin="54,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="39,156,0,0" VerticalAlignment="Top" Width="135" Click="btnAdd_Click"/>
        <Button x:Name="btnDivide" Content="Divide" HorizontalAlignment="Left" Margin="39,293,0,0" VerticalAlignment="Top" Width="135" Click="btnDivide_Click"/>
        <Button x:Name="btnMulti" Content="Multi" HorizontalAlignment="Left" Margin="39,243,0,0" VerticalAlignment="Top" Width="135" Click="btnMulti_Click"/>
        <Button x:Name="btnSub" Content="Subtract" HorizontalAlignment="Left" Margin="39,197,0,0" VerticalAlignment="Top" Width="135" Click="btnSub_Click"/>
        <Button x:Name="btnEquals" Content="Equals" HorizontalAlignment="Left" Margin="243,197,0,0" VerticalAlignment="Top" Height="66" Width="70" Click="btnEquals_Click"/>


    </Grid>
</Window>
